---
 -name: Handlers example
  hosts: webservers
  gather_facts: false
  tasks:
     -name: Install httpd latest version
      yum:
         name: httpd
         state: latest
         become: true
         notify: restart_httpd

   Handlers:
       -name:restart_httpd
        become: true
        service:
            name: httpd
            state: started      
