---
 -hosts: all
  become: yes

  task:
   -name: Install Apache on ubuntu
    apt: name=apache2  state=present
    when: ansible_os_family == "debian"
    ignore_errors: true

    -name: Install httpd on Red Hat
     yum: name=httpd  state=present
     when: ansible_os_family == "RedHat"
     ignore_errors: true
